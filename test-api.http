Content-Type: application/json

{
  "mode": "auto",
  "light": {
    "control": "schedule",
    "ldrThreshold": 1500,
    "onTime": "06:00",
    "offTime": "18:00"
  },
  "temperature": {
    "min": 24.0,
    "max": 28.0
  },
  "ration": {
    "minWeight": 300,
    "maxWeight": 1000
  },
